- let arrTitles = ['About','FAQ','Events','Contact us'];
- let aboutList = ['Our Mission','Terms','Copyrights'];
- let fqaList = ['Rules','Tickets','Editions','Contribute'];
- let eventsList = ['Star Gazing','Desert Mania','Dunes Madness','Spooky Land'];
- let contactUsList = ['hello@example.com','(405) 555-0128','(252) 555-0126'];

- let allArr = [aboutList, fqaList, eventsList, contactUsList]

section.footer
    .container 
        .row 
            each title, index in arrTitles
                .col.col-2.col-md-6.d_flex.jc_center
                    .footer-nav
                        h3.footer__title= title
                        ul
                            each val in allArr[index]
                                li
                                    a(href="")=val
            .col.col-4.col-md-6.d_flex
                .footer-nav.footer-soc
                    .footer-soc__container
                        h3.footer__title Follow us
                        .soc-icons
                            a.soc-ico(href="instagram.com")
                                img(src="img/ico-instagram.svg" alt="")
                            a.soc-ico(href="facebook.com")
                                img(src="img/ico-facebook.svg" alt="")
                            a.soc-ico(href="twitter.com")
                                img(src="img/ico-twitter.svg" alt="")
        .footer__copy-r 
            p Copyright Â© Night Trips 2019. All rights reserved.
            .footer__logo
                img(src="img/logo.svg" alt="")