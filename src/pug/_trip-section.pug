section.trip-section
    .content-container
        .container
            .trip-section__title
                h2 Pick your trip
                .title_divider 
                    img(src="img/title-divider.svg", alt="")
                p.trip-section__title-text Our team put together some trips to you to discover, feel free to discover each of them.
            .tabs
                .tabs__menu
                    ul
                        li Chill Adventure
                        li Spooky Times
                        li Desert Madness
                        li Out in the wild
                .tabs__content
                    .row 
                        .col 
                            .tab-slider
                                .tab-slider__item
                                    .tab-slider__img
                                        img(src="img/slider-img_1.png", alt="")
                                    .tab-slider__nav
                                        .prew-arrow
                                        .next-arrow

                        .col
                            .tabs__content-description

